<h1>Create Post</h1>

<%= form_with(model: @post, url: user_posts_path(current_user), local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text, placeholder: "Enter your post text here" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Post" %>
  </div>
<% end %>
