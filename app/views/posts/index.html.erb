<main id="posts" class="page">
  <%# Home button start %>
  <div id="user-page">
    <div class="btn-container">
      <%= link_to "Home", root_path %>
    </div>
    <%# End of Home button %>
    <%# User profile start %>
    <div class="user-container posts">
      <div class="user-profile-pic">
        <img src="<%= @user.photo %>" alt="profile-picture">
      </div>
      <div class="user-info">
        <h3><%= @user.name %></h3>
        <p class="posts-counter">Number of posts: <%= @user.posts_counter || 0 %></p>
      </div>
    </div>
    <%# End of user profile %>
    <article>
    <% @posts.each do |post| %>
      <%= link_to user_post_path(@user, post) do %>
        <div class="post-container">
          <h3 class="post-title"><%= post.title %></h3>
          <div class="post-details">
            <p class="details"><%= post.text[0..100]... %></p>
          </div>
          <div class="comment-like-container">
            <p class="comment-likes-data">
              Comment: <%= post.comments.count %>, Likes: <%= post.likes.count %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </article>
  </div>
</main>
